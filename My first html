    <script>
        const jokes = [
            { question: "Why don't scientists trust atoms?", answer: "Because they make up everything!" },
            { question: "Why did the scarecrow win an award?", answer: "Because he was outstanding in his field!" },
            { question: "Why don't skeletons fight each other?", answer: "They don't have the guts!" },
            { question: "Why did the bicycle fall over?", answer: "Because it was two-tired!" },
            { question: "What do you call fake spaghetti?", answer: "An impasta!" },
            // Add more jokes as needed
        ];

        let currentJokeIndex = 0;

        function displayJoke() {
            const joke = jokes[currentJokeIndex];
            document.getElementById('jokeQuestion').innerText = joke.question;
            document.getElementById('jokeInput').value = '';
            document.getElementById('jokeFeedback').innerText = '';
        }

        function checkJokeAnswer() {
            const joke = jokes[currentJokeIndex];
            const userAnswer = document.getElementById('jokeInput').value.trim();
            const feedback = userAnswer.toLowerCase() === joke.answer.toLowerCase() ? "Correct! Well done!" : "Incorrect. The correct answer is: " + joke.answer;
            document.getElementById('jokeFeedback').innerText = feedback;
        }

        function nextJoke() {
            currentJokeIndex = (currentJokeIndex + 1) % jokes.length;
            displayJoke();
        }

        window.onload = displayJoke;
    </script>
